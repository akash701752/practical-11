// Practical 11 Lab 06/12/2021
// Task a : Complete Implementation of  Inheritance .
#include <iostream>

using namespace std;

class A
{
    public :
       int x , y  ;
   
};
class B : public A
{
    public :
     void display()
     {
       x = 10 ; // Inheritance b/c x,y are data members of Class A
       y = 20 ; // Inheritance b/c x,y are data members of Class A
       cout<<"X = "<<x<<" Y = "<<y <<endl;
     }
};
int main()
{
    B obj ;
    obj.display(); 
    return 0;
}
